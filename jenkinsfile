pipeline{
    agent any
    stages{
        stage("STAGE1"){
            steps{
                echo 'this is first stage'
            }
        }
        stage("STAGE2"){
            steps{
                sh '''pwd
                ls
                '''
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
