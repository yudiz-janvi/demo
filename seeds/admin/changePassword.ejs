<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Change Password | NFT Talent</title>

    <link rel="icon" type="image/x-icon" sizes="16x16" href="/assets/images/favicon/favicon.ico" />

    <link rel="stylesheet" href="/admin/assets/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" />

    <link href="/admin/css/admin-style.css" rel="stylesheet" />
</head>

<body>
    <div id="main-wrapper">
        <!-- Include Header -->
        <%- include('header'); -%>

            <!-- Include Sidebar -->
            <%- include('sidebar'); -%>

                <!--**********************************
            Content body start
        ***********************************-->
                <div class="content-body">
                    <!-- row -->
                    <div class="container-fluid">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Change Password</h4>
                            </div>
                            <div class="cotainer" id="objectform">
                                <form enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <ul class="list-group list-group-flush chng-pswd-row">
                                                <li class="list-group-item">
                                                    <strong>
                                                        <p>Current Password</p>
                                                    </strong>
                                                    <div class="input-group" id="show_hide_crntpass">
                                                        <input type="password" class="form-control" id="currentPass"
                                                            placeholder="Current password" required />
                                                        <span class="input-group-text">
                                                            <i class="fa fa-eye-slash" id="togglePassword"
                                                                onclick="togglePassword('#show_hide_crntpass')" style="
                                                                cursor: pointer;
                                                            "></i>
                                                        </span>

                                                        <div id="currentPass-error" class="invalid-feedback animated">
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                            <ul class="list-group list-group-flush chng-pswd-row">
                                                <li class="list-group-item">
                                                    <strong>
                                                        <p>New Password</p>
                                                    </strong>
                                                    <div class="input-group" id="show_hide_newpass">
                                                        <input type="password" class="form-control" id="newPass"
                                                            placeholder="New Password" required />
                                                        <span class="input-group-text">
                                                            <i class="fa fa-eye-slash" id="togglePassword"
                                                                onclick="togglePassword('#show_hide_newpass')" style="
                                                                cursor: pointer;
                                                            "></i>
                                                        </span>

                                                        <div id="newPass-error" class="invalid-feedback animated"></div>
                                                    </div>
                                                </li>
                                            </ul>
                                            <ul class="list-group list-group-flush chng-pswd-row">
                                                <li class="list-group-item">
                                                    <strong>
                                                        <p>Confirm Password</p>
                                                    </strong>
                                                    <div class="input-group" id="show_hide_cfmpass">
                                                        <input class="form-control" type="password" name="password"
                                                            id="confirmPass" placeholder="Confirm password" required />
                                                        <span class="input-group-text">
                                                            <i class="fa fa-eye-slash" id="togglePassword"
                                                                onclick="togglePassword('#show_hide_cfmpass')" style="
                                                                cursor: pointer;
                                                            "></i>
                                                        </span>

                                                        <div id="confirmPass-error" class="invalid-feedback animated">
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-body">
                                <button type="button" class="btn btn-primary" value="Save" id="adminChangePassword">
                                    save
                                    <!-- <i class="fa fa-spinner fa-spin"></i> In process -->
                                </button>

                                <a href="/a/profile" class="card-link"><input type="button" class="btn btn-warning"
                                        value="Cancel" id="cancel" /></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- footer  -->

                <%- include('footer.ejs') %>
    </div>

